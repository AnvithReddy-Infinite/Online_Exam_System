@model OnlineExaminationSystem.Models.AdminQuestionViewModel

@{
    ViewBag.Title = "Questions Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Questions Management</h2>

@if (TempData["Success"] != null)
{
    <p style="color:green">@TempData["Success"]</p>
}
@if (TempData["Error"] != null)
{
    <p style="color:red">@TempData["Error"]</p>
}

<!-- ADD QUESTIONS -->
<h3>Add Questions</h3>

@using (Html.BeginForm("AddQuestions", "AdminQuestion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label>Technology</label>
    <br />
    @Html.DropDownListFor(m => m.TechId, Model.Technologies, "-- Select Technology --", new { required = "required" })

    <br />
    <br />

    <label>Level</label>
    <br />
    @Html.DropDownListFor(m => m.LevelId, Model.Levels, "-- Select Level --", new { required = "required" })

    <br />
    <br />

    <label>Select CSV</label>
    <br />
    <input type="file" name="File" accept=".csv" required />

    <br />
    <br />

    <button type="submit">Add Questions</button>
}

<hr />

<!-- REMOVE QUESTIONS -->
<h3>Remove Questions</h3>

@using (Html.BeginForm("RemoveQuestions", "AdminQuestion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label>Technology</label>
    <br />
    @Html.DropDownListFor(m => m.TechId, Model.Technologies, "-- Select Technology --", new { required = "required" })

    <br />
    <br />

    <label>Level</label>
    <br />
    @Html.DropDownListFor(m => m.LevelId, Model.Levels, "-- Select Level --", new { required = "required" })

    <br />
    <br />

    <label>Select CSV</label>
    <br />
    <input type="file" name="File" accept=".csv" required />

    <br />
    <br />

    <button type="submit">Remove Questions</button>
}
