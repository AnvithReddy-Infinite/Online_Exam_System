@model OnlineExaminationSystem.Models.Exam.SubmitExamResponseDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Exam Result</title>
    <style>
        body {
            font-family: Arial,sans-serif;
            background: #f2f4f7;
        }

        .result-container {
            width: 600px;
            margin: 50px auto;
            padding: 30px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #264653;
        }

        p {
            font-size: 16px;
            margin: 5px 0;
        }

        .correct {
            color: green;
            font-weight: bold;
        }

        .incorrect {
            color: red;
            font-weight: bold;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
            color: #264653;
            font-weight: bold;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="result-container">
        <h2>Exam Result</h2>

        <p><strong>User:</strong> @Model.UserName</p>
        <p><strong>Technology:</strong> @Model.Technology</p>
        <p><strong>Level:</strong> @Model.Level</p>
        <p><strong>Score:</strong> @Model.Score</p>
        <p><strong>Time Taken:</strong> @Model.TimeTakenMinutes minutes</p>
        <p><strong>Result:</strong> <span class="@(Model.Result == "Pass" ? "correct" : "incorrect")">@Model.Result</span></p>

        <a class="back-link" href="@Url.Action("Home", "User")">Back to Home</a>
    </div>
</body>
</html>
