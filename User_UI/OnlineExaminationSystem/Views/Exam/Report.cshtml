@model List<OnlineExaminationSystem.Models.Exam.UserExamReportDTO>

@{
    ViewBag.Title = "My Exam Reports";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">My Exam Reports</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">You haven't taken any exams yet.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var exam in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@exam.ExamName</h5>
                            <p class="card-text">
                                <strong>Technology:</strong> @exam.Technology <br />
                                <strong>Level:</strong> @exam.Level <br />
                                <strong>Date Taken:</strong> @exam.DateTaken.ToString("dd MMM yyyy, hh:mm tt") <br />
                                <strong>Score:</strong> @exam.Score / @exam.TotalMarks <br />
                                <strong>Result:</strong>
                                <span class="badge @(exam.Result == "Pass" ? "bg-success" : "bg-danger")">
                                    @exam.Result
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
