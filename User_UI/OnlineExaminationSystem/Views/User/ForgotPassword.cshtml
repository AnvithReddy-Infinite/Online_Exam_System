@model OnlineExaminationSystem.Models.ForgotPasswordViewModel
@{

    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <title>Forgot Password</title>
    <style>

        body {
            background-color: #f2f4f7;
            font-family: Arial, sans-serif;
        }

        .fp-container {
            width: 360px;
            margin: 120px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .fp-input {
            width: 100%;
            padding: 10px;
            margin-top: 6px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .fp-btn {
            width: 100%;
            padding: 10px;
            background-color: #264653; /* Japanese Indigo */

            color: white;
            border: none;
            border-radius: 4px;
            font-size: 15px;
            cursor: pointer;
        }

            .fp-btn:hover {
                background-color: #1b323c;
            }
    </style>
</head>
<body>
    <div class="fp-container">
        <h2>Forgot Password</h2>
        <form method="post">
            <label>Email</label>
            <input type="email" class="fp-input" placeholder="Enter your email" />
            <button type="submit" class="fp-btn">

                Send Reset Link
            </button>
        </form>
    </div>
</body>
</html>
