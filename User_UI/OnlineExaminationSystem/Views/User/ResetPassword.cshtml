@model OnlineExaminationSystem.Models.User.ResetPasswordDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Reset Password</title>
    <style>
        body {
            background-color: #f2f4f7;
            font-family: Arial, sans-serif;
        }

        .fp-container {
            width: 360px;
            margin: 120px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .fp-input {
            width: 100%;
            padding: 10px;
            margin-top: 6px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .fp-btn {
            width: 100%;
            padding: 10px;
            background-color: #264653; /* Japanese Indigo */
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 15px;
            cursor: pointer;
        }

            .fp-btn:hover {
                background-color: #1b323c;
            }

        .text-danger {
            color: red;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="fp-container">
        <h2>Reset Password</h2>
        @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label>Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "fp-input", placeholder = "Enter your email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

            <label>New Password</label>
            @Html.PasswordFor(m => m.NewPassword, new { @class = "fp-input", placeholder = "Enter new password" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })

            <button type="submit" class="fp-btn">Reset Password</button>
        }

        <a class="back-link" href="@Url.Action("Login", "User")">Back to Login</a>
    </div>
</body>
</html>
