@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    .home-wrapper {
        padding: 30px;
        font-family: Arial, sans-serif;
    }

    .home-hero {
        background: #264653;
        color: white;
        padding: 30px;
        border-radius: 8px;
        margin-bottom: 30px;
    }

        .home-hero h2 {
            margin: 0;
            font-size: 26px;
        }

        .home-hero p {
            margin-top: 10px;
            font-size: 15px;
            opacity: 0.9;
        }

    .home-actions {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
    }

    .action-card {
        flex: 1;
        padding: 25px;
        background: #ffffff;
        border-radius: 8px;
        text-decoration: none;
        color: #333;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .action-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.15);
        }

        .action-card h3 {
            margin: 0 0 8px 0;
            color: #264653;
        }

        .action-card p {
            margin: 0;
            font-size: 14px;
            color: #555;
        }

    .home-info {
        display: flex;
        gap: 20px;
    }

    .info-box {
        flex: 1;
        background: #f2f4f7;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #264653;
    }

        .info-box h4 {
            margin-top: 0;
            color: #264653;
        }

        .info-box p {
            font-size: 14px;
            color: #444;
        }
</style>

<div class="home-wrapper">

    <!-- HERO SECTION -->
    <div class="home-hero">
        @if (Session["UserId"] != null)
        {
            <h2>Welcome, @Session["UserName"]</h2>
            <p>You are logged in. You may start a new exam or view your previous results.</p>
        }
        else
        {
            <h2>Online Examination System</h2>
            <p>Please login or register to participate in exams.</p>
        }
    </div>

    <!-- ACTIONS -->
    <div class="home-actions">
        @if (Session["UserId"] != null)
        {
            <a href="/Exam/StartExam" class="action-card">
                <h3>Start New Exam</h3>
                <p>Select technology and difficulty level to begin.</p>
            </a>

            <a href="/User/Report" class="action-card">
                <h3>View Reports</h3>
                <p>Review your previous exam performance.</p>
            </a>
        }
        else
        {
            <a href="/User/Login" class="action-card">
                <h3>User Login</h3>
                <p>Login to access exams and reports.</p>
            </a>

            <a href="/User/Register" class="action-card">
                <h3>User Registration</h3>
                <p>Create a new account to start taking exams.</p>
            </a>
        }
    </div>

    <!-- INFO -->
    <div class="home-info">
        <div class="info-box">
            <h4>Exam Structure</h4>
            <p>Each exam is based on technology and difficulty level.</p>
        </div>

        <div class="info-box">
            <h4>Time Limit</h4>
            <p>Exams must be completed within the allocated time.</p>
        </div>

        <div class="info-box">
            <h4>Instant Evaluation</h4>
            <p>Results are shown immediately after submission.</p>
        </div>
    </div>

</div>
